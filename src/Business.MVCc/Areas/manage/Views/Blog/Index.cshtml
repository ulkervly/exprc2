@model List<Blog>
@{
    ViewData["Title"] = "Index";
    int counter = 0;
}

<div>
    <div class="container-fluid">
        <h1> Create:</h1>
        <a asp-action="create" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">NO</th>
                <th scope="col">Name</th>
                <th scope="col">Author</th>
                <th scope="col">Picture</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@item.Name</td>
                    <td>@item.Author</td>
                    <td><img style="max-width :80px" src="~/uploads/blogs/@item.ImageUrl" /></td>
                    <td><a asp-action="update" asp--route-id="@item.Id" class="btn btn-info">Update</a></td>
                    <td><a asp-action="delete" asp--route-id="@item.Id" class="btn btn-info">Delete</a></td>
                    <td><a asp-action="softdelete" asp--route-id="@item.Id" class="btn btn-info">SoftDelete</a></td>
                </tr>

            }
        </tbody>
    </table>
</>

